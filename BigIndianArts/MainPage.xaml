                                                                <UriImageSource Uri="{Binding Image}" 
                                                                CacheValidity="1" 
                                                                CachingEnabled="true"/>
                                                            </Image.Source>-->
                                                </Image>

                                                <!--  Service name  -->
                                                <Label Grid.Row="2"
                                                       FontSize="16"
                                                       Margin="5,0,0,5"
                                                       HorizontalOptions="CenterAndExpand"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalOptions="StartAndExpand"
                                                       FontFamily="UlmGroteskBold"
                                                       MaxLines="2"
                                                       
                                                       Text="WingBack" />
                                                <Label Grid.Row="3"
                                                       FontSize="8"
                                                       Margin="5,0"
                                                       HorizontalOptions="CenterAndExpand"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalOptions="StartAndExpand"
                                                       FontFamily="UlmGroteskBold"
                                                       MaxLines="2"
                                                       Text="WingBackdadafdasdWingBackdadafdasdWingBackdadafdasdWingBackdadafdasd" />
                                                <Label Grid.Row="4"
                                                       FontSize="8"
                                                       Margin="5,0"
                                                       HorizontalOptions="CenterAndExpand"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalOptions="StartAndExpand"
                                                       FontFamily="UlmGroteskBold"
                                                       MaxLines="1"
                                                       Text="WingBackdadafdasd" />
                                                <Label Grid.Row="5"
                                                       FontSize="18"
                                                       Margin="5,0" TextColor="{StaticResource LightGreenColor}"
                                                       HorizontalOptions="CenterAndExpand"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalOptions="StartAndExpand"
                                                       FontFamily="UlmGroteskBold"
                                                       MaxLines="1"
                                                       Text="$5000" />

                                                <!--<StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="ServiceListItem_Tapped"
                                                                  CommandParameter="{Binding .}" />
                                            -->
                                                <!--<TapGestureRecognizer 
                                                        Command="{Binding Path=BindingContext.ServiceTappedCommand, 
                                                        Source={x:Reference page_dashboard}}"
                                                        CommandParameter="{Binding .}"/>-->
                                                <!--
                                        </StackLayout.GestureRecognizers>-->
                                            </Grid>
                                        </Frame>
                                        <sfEffectsView:SfEffectsView.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="ServiceListItem_Tapped"
                                                                  CommandParameter="{Binding .}" />
                                        </sfEffectsView:SfEffectsView.GestureRecognizers>

                                    </sfEffectsView:SfEffectsView>
                                    <!--<BoxView BackgroundColor="Gray" HeightRequest="4"
                                                             VerticalOptions="EndAndExpand"
                                                             Grid.Row="1"/>-->

                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>


                        <StackLayout Orientation="Horizontal"
                                     Margin="20,0,0,0"
                                     IsVisible="true">

                            <Label Text="Trending"
                                   FontFamily="UlmGroteskBold"
                                   FontSize="20"
                                   TextColor="Black"
                                   Margin="2,5,0,3" />

                        </StackLayout>
                        <Grid Margin="30,0,30,0"
