                                    <Image Source="demo1"
                                           HorizontalOptions="FillAndExpand"
                                           VerticalOptions="FillAndExpand" />
                                    <Label Text="Men"
                                           FontFamily="UlmGroteskBold"
                                           HorizontalOptions="CenterAndExpand"
                                           VerticalOptions="End" />
                                </StackLayout>
                            </Frame>
                            <Frame Grid.Row="0"
                                   Grid.Column="1"
                                   HasShadow="False">
                                <StackLayout Spacing="5">
                                    <Image Source="demo1"
                                           HorizontalOptions="FillAndExpand"
                                           VerticalOptions="FillAndExpand" />
                                    <Label Text="Women"
                                           FontFamily="UlmGroteskBold"
                                           HorizontalOptions="CenterAndExpand"
                                           VerticalOptions="End" />
                                </StackLayout>
                            </Frame>
                            <Frame Grid.Row="1"
                                   Grid.Column="0"
