                                                  Margin="0,0,20,35"
                                                  BackgroundColor="Transparent"
                                                  DotPlacement="Default"
                                                  DotsBorderColor="white"
                                                  EnableLooping="True"
                                                  EnableAutoPlay="True" HeightRequest="200"
                                                  HorizontalOptions="Center"
                                                  ItemTemplate="{StaticResource BannerTemplate}"
                                                  NavigationStripMode="Dots"
                                                  NavigationDelay="3000"
                                                  NavigationDirection="Horizontal"
                                                  NavigationStripPosition="Bottom"
                                                  SelectedDotColor="{StaticResource ThemeColor}"
                                                  UnselectedDotColor="Gray"
                                                  VerticalOptions="StartAndExpand" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal"
                                 Margin="20,0,0,0"
                                
                                 IsVisible="true">
                        <Image Source="auction"
                               HeightRequest="30"
                               Margin="0,0,0,3" />
                            <Label Text="Best Selling"
