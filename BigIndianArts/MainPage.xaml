                                                  VerticalOptions="FillAndExpand"
                                                  HorizontalOptions="FillAndExpand"
                                                  BackgroundColor="White"
                                                  Padding="0"
                                                  Margin="0,-20,0,0">
                                                <Grid Grid.Row="0"
                                                      HorizontalOptions="EndAndExpand"
                                                      VerticalOptions="StartAndExpand">
                                                    <Image Source="bookmarkgray.png"
                                                           HeightRequest="25"
                                                           WidthRequest="25"
                                                           Grid.Column="1"
                                                           HorizontalOptions="Start"
                                                           VerticalOptions="EndAndExpand"
                                                           x:Name="img_WishlistWhite"
                                                           IsVisible="true">
                                                        <Image.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="WishList_Clicked">

                                                            </TapGestureRecognizer>
                                                        </Image.GestureRecognizers>
                                                    </Image>
                                                    <Image Source="bookmark.png"
                                                           HeightRequest="25"
                                                           WidthRequest="25"
                                                           Grid.Column="1"
                                                           HorizontalOptions="Start"
                                                           VerticalOptions="EndAndExpand"
                                                           x:Name="img_Wishlistred"
                                                           IsVisible="false">
                                                        <Image.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="WishList_Clicked">

                                                            </TapGestureRecognizer>
                                                        </Image.GestureRecognizers>
                                                    </Image>
                                                </Grid>
                                                <!--  Store image  -->
                                                <Image Grid.Row="1"
                                                       Margin="0,0,0,1"
                                                       Aspect="Fill"
                                                       BackgroundColor="White"
                                                       HorizontalOptions="FillAndExpand"
                                                       VerticalOptions="Center"
                                                      >
                                                    <Image.Source>
                                                        <UriImageSource Uri="{Binding product_image}" 
                                                                CacheValidity="1" 
                                                                CachingEnabled="true"/>
                                                            </Image.Source>
                                                </Image>

                                                <!--  Service name  -->
                                                <Label Grid.Row="2"
                                                       FontSize="15"
                                                       Margin="5,0,0,0"
                                                       HorizontalOptions="CenterAndExpand"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalOptions="StartAndExpand"
                                                       FontFamily="UlmGroteskBold"
                                                       MaxLines="2"
                                                       Text="{Binding product_name}" />
                                                <Label Grid.Row="3"
                                                       FontSize="8"
                                                       Margin="5,0"
                                                       HorizontalOptions="CenterAndExpand"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalOptions="StartAndExpand"
                                                       FontFamily="UlmGroteskBold"
                                                       MaxLines="2"
                                                       Text="{Binding product_description}" />
                                                <Label Grid.Row="4"
                                                       FontSize="8"
                                                       Margin="5,0"
                                                       HorizontalOptions="CenterAndExpand"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalOptions="StartAndExpand"
                                                       FontFamily="UlmGroteskBold"
                                                       MaxLines="1"
                                                       Text="{Binding sub_category}" />
                                                <Label Grid.Row="5"
                                                       FontSize="18"
                                                       Margin="5,0"
                                                       TextColor="{StaticResource LightGreenColor}"
                                                       HorizontalOptions="CenterAndExpand"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalOptions="StartAndExpand"
                                                       FontFamily="UlmGroteskBold"
                                                       MaxLines="1">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="₹"></Span>
                                                            <Span Text="{Binding price}"></Span>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>

                                                <!--<StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="ServiceListItem_Tapped"
                                                                  CommandParameter="{Binding .}" />
                                            -->
                                                <!--<TapGestureRecognizer 
                                                        Command="{Binding Path=BindingContext.ServiceTappedCommand, 
                                                        Source={x:Reference page_dashboard}}"
                                                        CommandParameter="{Binding .}"/>-->
                                                <!--
                                        </StackLayout.GestureRecognizers>-->
