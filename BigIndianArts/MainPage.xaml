                                    <Label Text="Kids"
                                           FontFamily="UlmGroteskBold"
                                           HorizontalOptions="CenterAndExpand"
                                           VerticalOptions="End" />
                                </StackLayout>
                            </Frame>
                            <Frame Grid.Row="1"
                                   Grid.Column="1"
                                   HasShadow="False">
                                <StackLayout Spacing="5">
                                    <Image Source="demo1"
                                           HorizontalOptions="FillAndExpand"
