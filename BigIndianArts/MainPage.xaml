<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:utility1="clr-namespace:BigIndianArts.CustomControls"
             xmlns:sfavatar="clr-namespace:Syncfusion.XForms.AvatarView;assembly=Syncfusion.Core.XForms"
             x:Class="BigIndianArts.MainPage"
             xmlns:sfEffectsView="clr-namespace:Syncfusion.XForms.EffectsView;assembly=Syncfusion.Core.XForms"
             xmlns:syncfusion="clr-namespace:Syncfusion.SfRotator.XForms;assembly=Syncfusion.SfRotator.XForms"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="BannerTemplate">
               
                    <ImageButton  CornerRadius="10"
                                  Margin="0"
                                  Padding="0"
                                  Source="{Binding Image}"
                                  Aspect="AspectFill"
                                  Clicked="BannerImg_clicked"
                                  CommandParameter="{Binding .}" 
                                  BackgroundColor="{StaticResource BodyBgColor}">

                    </ImageButton>
              
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Grid VerticalOptions="FillAndExpand"
              RowDefinitions="70,Auto"
              ColumnDefinitions="120,Auto"
              BackgroundColor="{StaticResource BodyBgColor}"
              Margin="0"
              Padding="0">
            <!--<StackLayout VerticalOptions="FillAndExpand"
                         HorizontalOptions="FillAndExpand"
                         Grid.Row="0"
                         Grid.RowSpan="3"
                         Grid.Column="0"
                         BackgroundColor="{StaticResource ThemebgColor}" />-->


            <!--<Image Source="bashboard_bg.png"
                   Aspect="AspectFill"
                   VerticalOptions="StartAndExpand"
                   Grid.Row="0"
                   Grid.RowSpan="3"
                   Grid.ColumnSpan="2"
                   Grid.Column="0"
                   Margin="{OnPlatform Android='0', iOS='0,-20,0,0'}" />-->

            <!--NavBar Section-->
            <StackLayout HorizontalOptions="FillAndExpand"
                         VerticalOptions="CenterAndExpand"
                         Orientation="Horizontal"
                         Margin="15,15,15,0"
                         Grid.ColumnSpan="2"
                         Grid.Column="0">

                <Image Source="menu.png"
                       HorizontalOptions="Start"
                       HeightRequest="28"
                       WidthRequest="28">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="homemenutapped" />
                    </Image.GestureRecognizers>
                </Image>

                <!--<Image Source="search.png"
                       HorizontalOptions="EndAndExpand"
                       HeightRequest="22"
                       WidthRequest="22" />-->

                <Grid HorizontalOptions="EndAndExpand"
                      VerticalOptions="Center"
                      Margin="0,0">
                    <ImageButton Source="bell.png"
                                 CornerRadius="5"
                                 HorizontalOptions="Start"
                                 VerticalOptions="Center"
                                 Clicked="ImageNotifyButton_Clicked"
                                 BackgroundColor="Transparent"
                                 Padding="5,10,5,10"
                                 HeightRequest="40"
                                 WidthRequest="40" />

                    <Grid HorizontalOptions="Center"
                          Margin="20,0,0,0">
                            <Image Source="circlegreen.png"
                               HeightRequest="20"
                               WidthRequest="20"
                               Aspect="AspectFit"
                               Margin="0,-18,-5,0" />
                        <Label x:Name="lbl_notificationCount"
                                   TextColor="White"
                                   Text="5"
                                   FontFamily="UlmGroteskBold"
                                   FontSize="10"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Margin="0,-17,-5,0" />
                    </Grid>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ImageNotifyButton_Clicked" />
                    </Grid.GestureRecognizers>
                </Grid>



                <Grid>
                    <sfavatar:SfAvatarView ImageSource="avatar"
                                           BackgroundColor="Gray"
                                           ContentType="Custom"
                                           AvatarShape="Circle"
                                           AvatarSize="Large"
                                           HorizontalOptions="Center"
                                           VerticalOptions="CenterAndExpand"
                                           BorderColor="{StaticResource ThemeColor}"
                                           BorderWidth="2"
                                           HasShadow="False">
                        <sfavatar:SfAvatarView.GestureRecognizers>
                            <TapGestureRecognizer />
                        </sfavatar:SfAvatarView.GestureRecognizers>
                    </sfavatar:SfAvatarView>

                    <sfavatar:SfAvatarView x:Name="sfAvatar_profileImg"
                                           BackgroundColor="Transparent"
                                           ContentType="Custom"
                                           AvatarShape="Circle"
                                           AvatarSize="Large"
                                           HorizontalOptions="Center"
                                           VerticalOptions="CenterAndExpand"
                                           BorderColor="{StaticResource ThemeColor}"
                                           BorderWidth="2"
                                           HasShadow="False">
                        <sfavatar:SfAvatarView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureProfileRecognizer_Tapped" />
                        </sfavatar:SfAvatarView.GestureRecognizers>
                    </sfavatar:SfAvatarView>

                    <sfEffectsView:SfEffectsView TouchDownEffects="Ripple"
                                                 CornerRadius="5">
                        <sfEffectsView:SfEffectsView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureProfileRecognizer_Tapped" />
                        </sfEffectsView:SfEffectsView.GestureRecognizers>
                    </sfEffectsView:SfEffectsView>

                </Grid>

            </StackLayout>

            <ScrollView    HorizontalOptions="StartAndExpand"
                           Grid.Row="1"
                           Grid.ColumnSpan="2"
                           Grid.Column="0"
                           VerticalOptions="FillAndExpand" >
                    <StackLayout>
                        
                        
                        <StackLayout   Margin="20,0,0,0"
                                       Padding="0"
                                       VerticalOptions="FillAndExpand">

                            <Label Margin="0,30,0,0"
                                   x:Name="lbl_date"
                                   FontSize="18"
                                   TextColor="{StaticResource VeryLightGrayColor}">
                            </Label>
                            <StackLayout Orientation="Vertical">
                                <Label Text="What"
                                       x:Name="lbl_what"
                                       Style="{StaticResource MainPageNameLabel}" />
                                <Label x:Name="lbl_nmae"
                                       Text="do you need!"
                                       Style="{StaticResource MainPageNameLabel}">
                                </Label>
                            </StackLayout>

                            <Frame BackgroundColor="White"
                                   CornerRadius="10"
                                   Margin="0,25,20,35"
                                   HasShadow="True"
                                   VerticalOptions="FillAndExpand"
                                   HorizontalOptions="FillAndExpand"
                                   Padding="0" x:Name="frm_search">

                                <Grid VerticalOptions="FillAndExpand"
                                      Padding="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="50" />
                                    </Grid.ColumnDefinitions>


                                    <ImageButton Source="search"
                                                 VerticalOptions="CenterAndExpand"
                                                 BackgroundColor="Transparent"
                                                 Clicked="OnclickSerchbutton"
                                                 HorizontalOptions="End"
                                                 HeightRequest="30"
                                                 Grid.Column="0"
                                                 Margin="20,0,0,0" />
                                    <utility1:BorderlessEntry  x:Name="ent_SearchBox"
                                                               VerticalOptions="EndAndExpand"
                                                               Placeholder="Search"
                                                               Grid.Column="1"
                                                               FontSize="18"
                                                               FontFamily="UlmGroteskBold"
                                                               TextChanged="Onsearching"
                                                               PlaceholderColor="{StaticResource PlaceHolderColor}"
                                                               TextColor="{StaticResource TitleTextColor}"
                                                               IsHideLine="True"
                                                               VerticalTextAlignment="Start"
                                                               Margin="10,0,0,3" />

                                    <Grid Padding="0"
                                          Margin="0"
                                          Grid.Column="2">
                                        <ImageButton x:Name="btn_toFocusSearch"
                                                     Source="close_grey"
                                                     Opacity="0"
                                                     VerticalOptions="CenterAndExpand"
                                                     BackgroundColor="Transparent"
                                                     Clicked="OnFocusSearchButtonClicked"
                                                     HorizontalOptions="End"
                                                     HeightRequest="40"
                                                     WidthRequest="40"
                                                     Margin="0,0,13,0"
                                                     Padding="10" />

                                        <ImageButton x:Name="btn_close"
                                                     IsVisible="false"
                                                     Source="close_grey"
                                                     Opacity="0.5"
                                                     VerticalOptions="CenterAndExpand"
                                                     BackgroundColor="Transparent"
                                                     Clicked="OnClearSearchClicked"
                                                     HorizontalOptions="End"
                                                     HeightRequest="42"
                                                     WidthRequest="42"
                                                     Margin="0,0,13,0"
                                                     Padding="12" />
                                    </Grid>
                                </Grid>
                            </Frame>
                            <syncfusion:SfRotator x:Name="sfRotator_Home"
